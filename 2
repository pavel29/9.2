using System;
using System.Windows.Forms;
using System.Drawing;
using System.Drawing.Drawing2D;

public class MainForm : Form {
public MainForm(){
this.Text = "Form for painting";
}
			public static void Main(string [] args){
				Application.Run(new MainForm());
			}
            protected override void OnMouseUp(MouseEventArgs e)
            {
                base.OnMouseMove(e);
                {
                    if (e.Button == MouseButtons.Middle)
                    {
                        Graphics r = this.CreateGraphics();
                        r.DrawEllipse(new Pen(Color.Yellow), e.X, e.Y, 60, 60);
                        Graphics g = this.CreateGraphics();
                        g.DrawEllipse(new Pen(Color.Red), e.X+20, e.Y, 20, 20);
                    }
                    if (e.Button == MouseButtons.Left)
                    {
                        Graphics g = this.CreateGraphics();
                        g.DrawRectangle(new Pen(Color.Green), e.X, e.Y, 80, 100);
                    }
                    if (e.Button == MouseButtons.Right)
                    {
                        Graphics g = this.CreateGraphics();
                        LinearGradientBrush liner = new LinearGradientBrush(new Point(0, 0), new Point(200, 10), Color.FromArgb(255, 255, 0, 0), Color.FromArgb(255, 0, 0, 255));
                        g.FillRectangle(liner, e.X, e.Y, 80, 100);
                    }
                }
             }
}
